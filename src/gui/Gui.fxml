      <Button fx:id="balanced" layoutX="228.0" layoutY="356.0" mnemonicParsing="false" onMouseClicked="#defaultBalanced" text="BALANCED" />
      <Button fx:id="difficult" layoutX="353.0" layoutY="356.0" mnemonicParsing="false" onMouseClicked="#defaultDifficult" text="DIFFICULT" />
      <Button fx:id="crazy" layoutX="472.0" layoutY="356.0" mnemonicParsing="false" onMouseClicked="#defaultCrazy" text="CRAZY" />
